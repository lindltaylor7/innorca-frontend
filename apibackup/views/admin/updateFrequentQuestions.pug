extends ../layout

block content
  .page-wrapper
    .container-fluid: .row: .col-12
      form(method='post')
        input(type='hidden', name='_csrf', value=_csrf)
        .card.pt-4
          h3.title-primary2.card-title.text-center Editar pregunta frecuente
          .card-body
            .form-group.d-flex.flex-column.flex-md-row.align-items-start.align-items-md-center
              label.my-0.mr-4 Seleccionar categor√≠a
              .m-2
              select.form-control.w-100.w-md-25(name='category' required)
                option(value=`${frequentQuestion.category._id}` selected) #{frequentQuestion.category.name}
                each questionCategory in questionCategories
                  if(questionCategory.id != frequentQuestion.category._id)
                    option(value=`${questionCategory._id}`) #{questionCategory.name}
            .form-group.row
              .col-12
                label.mr-4.pb-2 Edita la pregunta
              .col-12
                input.form-control(type='text' name='question' required value=`${frequentQuestion.question}`)
            .form-group.row
              .col-12
                label.mr-4.pb-2 Edita la respuesta
              .col-12
                textarea.tiny-frequent-question(name='answer') #{frequentQuestion.answer}
            .form-group.text-end
              button.btn.btn-primary(type='submit') Editar